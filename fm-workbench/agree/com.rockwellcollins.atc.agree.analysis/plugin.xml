<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="com.rockwellcollins.atc.agree.analysis.actionSet">
         <menu
               label="AGREE &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Verify Top Level Only"
               icon="icons/layer.png"
               class="com.rockwellcollins.atc.agree.analysis.actions.VerifyTop"
               tooltip="Verify only the contract of the top level system implementation"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="com.rockwellcollins.atc.agree.analysis.actions.VerifyTop"
               enablesFor="1">
               <enablement>
					<objectClass name="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode"/>
				</enablement>
         </action>
          <action
               label="&amp;Verify Recursively"
               icon="icons/layers.png"
               class="com.rockwellcollins.atc.agree.analysis.actions.VerifyRec"
               tooltip="Verifies the contracts of all system implementations under the top level system"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="com.rockwellcollins.atc.agree.analysis.actions.VerifyRec"
               enablesFor="1">
               <enablement>
					<objectClass name="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode"/>
				</enablement>
         </action>
      </actionSet>
   </extension>

</plugin>
