<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="AGREE Action Set"
            visible="true"
            id="com.rockwellcollins.atc.agree.analysis.actionSet">
         <menu
               label="A&amp;GREE Menu"
               id="agreeMenu">
            <separator
                  name="agreeMenu">
            </separator>
         </menu>
          <action
               label="Verify &amp;All System Layers"
               icon="icons/layers.png"
               class="com.rockwellcollins.atc.agree.analysis.actions.VerifyAll"
               tooltip="Verify the contracts of all layers from the currently selected component and below"
               menubarPath="agreeMenu/agreeGroup"
               toolbarPath="agreeGroup"
               id="com.rockwellcollins.atc.agree.analysis.actions.VerifyAll"
               enablesFor="1">
               <enablement>
					<objectClass name="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode"/>
				</enablement>
         </action>
         <action
               label="Verify &amp;Single Layer"
               icon="icons/layer.png"
               class="com.rockwellcollins.atc.agree.analysis.actions.VerifySingle"
               tooltip="Verify only the contract of the currently selected component"
               menubarPath="agreeMenu/agreeGroup"
               toolbarPath="agreeGroup"
               id="com.rockwellcollins.atc.agree.analysis.actions.VerifySingle"
               enablesFor="1">
               <enablement>
					<objectClass name="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode"/>
				</enablement>
         </action>
      </actionSet>
   </extension>
   
   <extension point="org.eclipse.ui.views">
        <view id="com.rockwellcollins.atc.agree.analysis.agreeResultsView"
             name="AGREE Results"
          class="com.rockwellcollins.atc.agree.analysis.AgreeResultsView"
          icon="icons/layers.png"/>
   </extension>
  
   <extension point="org.eclipse.ui.commands">
     <category id="com.rockwellcollins.atc.agree.analysis.commands"
       name="AGREE commands">
     </category>
     <command categoryId="com.rockwellcollins.atc.agree.analysis.commands"
            description="Terminate the current AGREE analysis"
            id="com.rockwellcollins.atc.agree.analysis.commands.terminate"
            name="Terminate AGREE Analysis">
     </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.rockwellcollins.atc.agree.analysis.agreeResultsView">
         <command
               commandId="com.rockwellcollins.atc.agree.analysis.commands.terminate"
               icon="icons/terminate.png"
               label="Terminate"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
