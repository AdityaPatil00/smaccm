import "../../interfaces/uart.idl4";
import "../../interfaces/putchar_interface.idl4";
import "../driver/driver.camkes";
import "../driver_wrapper/driver_wrapper.camkes";

component UART {
    hardware;
    dataport Buf mem;
}

component wrapped_driver {
    uses putchar_interface putchar;

    composition {
        component UART uart;
        component driver drv;
        component driver_wrapper wd;
 
        connection seL4HardwareMMIO uart_mem(from drv.mem, to uart.mem);
        connection seL4RPC uart_inf(from wd.uart, to drv.uart);

        connection ExportRPC conn1(from wd.pci, to putchar);
    }
    configuration {
        uart.mem_attributes = "0x43F90000:0x1000";
		/* random.ID = 1; */
    }
}
